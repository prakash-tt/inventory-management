<%= form_for(@post, :remote => true) do |f|  %>
  <div id="post-title">
    <%= f.label :title %>
    <%= f.text_field :title, :required => true %>
    <p id="title-error"></p>
  </div>
  <br>
  <div id="post-description">
    <%= f.label :description %>
    <%= f.text_area :description, :required => true %>
    <p id="description-error"></p>
  </div>
  <br>
  <div>
    <%= f.submit %>
  </div>
<% end %>
